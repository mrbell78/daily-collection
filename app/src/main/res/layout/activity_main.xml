<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginBkColor"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#125F32"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@android:color/white"
        style="@style/ToolbarTheme"
        app:collapseIcon="@drawable/ic_baseline_arrow_back_24"
        android:id="@+id/actionbarid"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/framelayout"/>

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mbn_circleColor="#106A37"
        app:mbn_backgroundBottomColor="#ffffff"
        app:mbn_countBackgroundColor="#ff6f00"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="#106A37"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="@android:color/white"
        app:mbn_shadowColor="#1f212121"
        android:id="@+id/bottom_navid"
        />

</LinearLayout>